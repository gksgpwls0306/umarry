<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/register_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="REGISTER"
            android:textColor="@color/pink_300"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/l_cardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/job"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="20dp"
                android:hint="직업"
                android:textColor="@color/grey_700"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="20dp"
                app:layout_constraintTop_toTopOf="@+id/L_cardView" />

            <EditText
                android:id="@+id/ability"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="90dp"
                android:paddingLeft="20dp"
                android:hint="최종학력 (ex. 대졸 / 고졸 )"
                android:textColor="@color/grey_700"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:inputType="text"
                app:layout_constraintTop_toTopOf="@+id/L_cardView"/>

            <EditText
                android:id="@+id/stature"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="160dp"
                android:paddingLeft="20dp"
                android:hint="키 (ex.168)"
                android:textColor="@color/grey_700"
                android:maxLines="1"
                android:maxLength="3"
                android:imeOptions="actionNext"
                android:inputType="number"
                app:layout_constraintTop_toTopOf="@+id/L_cardView"/>

            <EditText
                android:id="@+id/bigArea"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="230dp"
                android:paddingLeft="20dp"
                android:hint="주소1 (ex. 충청도 / 서울시 )"
                android:textColor="@color/grey_700"
                android:maxLines="1"
                android:maxLength="6"
                android:imeOptions="actionNext"
                android:inputType="text"
                app:layout_constraintTop_toTopOf="@+id/L_cardView"/>

            <EditText
                android:id="@+id/smallArea"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="300dp"
                android:paddingLeft="20dp"
                android:hint="주소2 (ex.수원시 / 동작구 )"
                android:textColor="@color/grey_700"
                android:maxLines="1"
                android:maxLength="6"
                android:imeOptions="actionNext"
                android:inputType="text"
                app:layout_constraintTop_toTopOf="@+id/L_cardView"/>

            <EditText
                android:id="@+id/yStature"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="370dp"
                android:paddingLeft="20dp"
                android:hint="이상형의 키 (ex.168)"
                android:textColor="@color/grey_700"
                android:maxLines="1"
                android:imeOptions="actionNext"
                android:inputType="number"
                app:layout_constraintTop_toTopOf="@+id/L_cardView"/>

            <EditText
                android:id="@+id/yAbility"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="440dp"
                android:layout_marginBottom="20dp"
                android:hint="이상형의 최종학력 (ex. 대졸 / 고졸 )"
                android:textColor="@color/grey_700"
                android:maxLines="1"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:longClickable="false"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"/>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/next_button"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_bg"
            android:text="Next"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/l_cardView"
            app:layout_constraintEnd_toEndOf="@+id/l_cardView"
            app:layout_constraintStart_toStartOf="@+id/l_cardView"
            app:layout_constraintTop_toBottomOf="@+id/l_cardView" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>