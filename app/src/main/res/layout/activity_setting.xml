<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".setting.SettingActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/pink_100"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back_arror"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/tb_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textSize="25sp"
            android:paddingHorizontal="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            />
        <ImageView
            android:id="@+id/tb_chatting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chatting"
            android:layout_gravity="center"
            android:padding="10dp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/myPageBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MyPage"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/myLikeList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My Matching List"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/secondAuth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Second Auth"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/SignOutBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LogOut"
            android:textSize="18sp"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>





</RelativeLayout>